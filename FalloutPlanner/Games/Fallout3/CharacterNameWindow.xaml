<Window x:Class="FalloutPlanner.CharacterNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Character Name"
        Height="150"
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource FalloutBackgroundBrush}">

    <Border Margin="15"
            BorderBrush="{DynamicResource FalloutAccentBrush}"
            BorderThickness="2"
            Padding="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Name Input Row -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <TextBlock Text="Name:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           FontWeight="Bold"/>

                <TextBox x:Name="NameTextBox"
                         Width="150"
                         MaxLength="11"
                         VerticalAlignment="Center"
                         PreviewTextInput="NameTextBox_PreviewTextInput"
                         TextChanged="NameTextBox_TextChanged"/>

                <Button x:Name="ConfirmButton"
                        Content="Confirm"
                        Margin="10,0,0,0"
                        Padding="10,4"
                        IsEnabled="False"
                        Click="ConfirmButton_Click"
                        Style="{StaticResource BoxButtons}" />
            </StackPanel>

        </Grid>
    </Border>
</Window>

