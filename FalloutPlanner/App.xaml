<Application x:Class="FalloutPlanner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Core colors -->
        <SolidColorBrush x:Key="FalloutBackgroundBrush" Color="#08130A" />
        <SolidColorBrush x:Key="FalloutPanelBrush" Color="#0E1F12" />
        <SolidColorBrush x:Key="FalloutAccentBrush" Color="#88FF00" />
        <SolidColorBrush x:Key="FalloutAccentDarkBrush" Color="#447700" />
        <SolidColorBrush x:Key="FalloutBorderBrush" Color="#335500" />
        <SolidColorBrush x:Key="FalloutTextBrush" Color="#CFFF9A" />

        <!-- Default window styling -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource FalloutBackgroundBrush}" />
            <Setter Property="Foreground" Value="{StaticResource FalloutTextBrush}" />
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>

        <!-- Box Button styling (used outside Fallout3 too) -->
        <Style x:Key="BoxButtons" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource FalloutPanelBrush}" />
            <Setter Property="Foreground" Value="{StaticResource FalloutTextBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource FalloutBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="3" CornerRadius="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource FalloutAccentBrush}" />
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource FalloutAccentDarkBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Global TextBlock styling -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource FalloutTextBrush}" />
        </Style>
    </Application.Resources>
</Application>