<Window x:Class="FalloutPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FalloutPlanner"
        mc:Ignorable="d"
        Title="Fallout Planner" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource FalloutBackgroundBrush}">
        <!-- Frame hosts all pages so only one is visible at a time -->
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
