<Page x:Class="FalloutPlanner.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home">

    <Border Margin="15"
            BorderBrush="{DynamicResource FalloutAccentBrush}"
            BorderThickness="2"
            Padding="5">

        <Grid Background="{DynamicResource FalloutBackgroundBrush}">

            <!-- Outer grid centers content -->
            <Grid VerticalAlignment="Center"
                  HorizontalAlignment="Stretch">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Center column content -->
                <Grid Grid.Column="1"
                      Width="Auto"
                      MinWidth="200">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Buttons -->
                    <Button Grid.Row="0"
                            Content="Fallout 1"
                            Margin="0,8"
                            MinHeight="40"
                            MinWidth="200"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource BoxButtons}"
                            Click="Fallout1Button_Click"/>

                    <Button Grid.Row="1"
                            Content="Fallout 2"
                            Margin="0,8"
                            MinHeight="40"
                            MinWidth="200"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource BoxButtons}"
                            Click="Fallout2Button_Click"/>

                    <Button Grid.Row="2"
                            Content="Fallout 3"
                            Margin="0,8"
                            MinHeight="40"
                            MinWidth="200"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource BoxButtons}"
                            Click="Fallout3Button_Click"/>

                    <Button Grid.Row="3"
                            Content="Fallout NV"
                            Margin="0,8"
                            MinHeight="40"
                            MinWidth="200"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource BoxButtons}"
                            Click="FalloutNVButton_Click"/>

                    <Button Grid.Row="4"
                            Content="Fallout 4"
                            Margin="0,8"
                            MinHeight="40"
                            MinWidth="200"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource BoxButtons}"
                            Click="Fallout4Button_Click"/>

                </Grid>
            </Grid>

        </Grid>
    </Border>
</Page>
